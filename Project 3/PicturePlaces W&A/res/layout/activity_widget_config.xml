<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient"
    tools:context=".WidgetConfig" >
	
    <TextView
	    android:id="@+id/textView1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/widgetGroup"
	    android:layout_alignParentTop="true"
	    android:layout_marginTop="16dp"
	    android:text="Set Image Resource" />
    
	<RadioGroup android:id="@+id/widgetGroup"
	    		android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/textView1"
		        android:layout_marginTop="20dp">

		<RadioButton
		    android:id="@+id/lastPicButton"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Image Taken Last" />
	
	    <RadioButton
	        android:id="@+id/lastLocButton"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="14dp"
	        android:text="Image from Last Location" />
    </RadioGroup>

	<Button
	    android:id="@+id/doneButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/widgetGroup"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="50dp"
	    android:text="DONE" />

</RelativeLayout>
